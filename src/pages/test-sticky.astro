<style>
  .test-container {
    display: grid;
    grid-template-columns: 40% 60%;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    min-height: 300vh; /* Forzar mucho scroll */
  }
  
  .sticky-col {
    /* La columna NO debe tener height fijo */
  }
  
  .sticky-box {
    position: sticky;
    top: 100px; /* Debajo del navbar */
    background: linear-gradient(135deg, #AA37F2, #FF6AD7);
    color: white;
    padding: 3rem;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 20px 60px rgba(170, 55, 242, 0.4);
  }
  
  .sticky-box h2 {
    font-size: 2.5rem;
    margin: 0 0 1rem;
  }
  
  .sticky-box p {
    font-size: 1.1rem;
    opacity: 0.9;
  }
  
  .indicator {
    margin-top: 2rem;
    padding: 1rem;
    background: rgba(255,255,255,0.2);
    border-radius: 10px;
    font-weight: bold;
  }
  
  .scroll-col {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-top: 100px; /* Compensar navbar */
  }
  
  .scroll-panel {
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    padding: 3rem;
    border-radius: 16px;
    min-height: 400px;
  }
  
  .scroll-panel h3 {
    color: #FF6AD7;
    font-size: 2rem;
    margin: 0 0 1rem;
  }
  
  .scroll-panel p {
    color: rgba(255,255,255,0.7);
    line-height: 1.8;
  }
</style>
